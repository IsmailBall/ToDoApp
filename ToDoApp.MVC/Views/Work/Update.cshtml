@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Work
<form method="post" asp-action="Update" asp-controller="Work">
    <div class="mb-3">
        <label for="defination" class="form-label">Work Statement</label>
        <input type="text" class="form-control" asp-for="@Model.Defination">
    </div>
    <div class="mb-3 form-check">
        @Html.CheckBoxFor(m => Model.IsCompleted, new { @class = "form-check-input" })
        <label class="form-check-label" for="IsCompleted">Work is completed ?</label>
    </div>
    <button type="submit" class="btn btn-outline-primary">Submit</button>
</form>