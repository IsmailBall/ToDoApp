@using ToDoApp.MVC.Model
@model UserLogInModel
<html>
<head>

    <link href="~/css/SıgnIn.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <title></title>
</head>
<body class="text-center">
    <main class="form-signin">
        <form method="post" asp-action="LogIn" asp-controller="User">

            <h1 class="h3 mb-3 fw-normal">Please log in</h1>

            <div class="form-floating">
                <label for="Username">Username</label>
                <input class="form-control" asp-for="@Model.Username" placeholder="Username">
            </div>
            <div class="form-floating">
                <label for="Password">Password</label>
                <input class="form-control" asp-for="@Model.Password" placeholder="Password">
            </div>
            <div class="form-floating">
                <label for="Email">Email</label>
                <input class="form-control" asp-for="@Model.Email" placeholder="Password">
            </div>
            <div class="form-floating">
                <label for="Gender">Gender</label>
                <input class="form-control" asp-for="@Model.Gender" placeholder="Password">
            </div>
            <button class="w-100 btn btn-lg btn-primary mt-3" type="submit">Log in</button>
            <p class="mt-5 mb-3  text-muted">&copy; 2017–2021</p>
        </form>
    </main>

</body>
</html>
