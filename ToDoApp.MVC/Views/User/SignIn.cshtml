@using ToDoApp.MVC.Model
@model UserSignInModel
<html>
<head>

    <link href="~/css/SıgnIn.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <title></title>
</head>
<body class="text-center">
    <main class="form-signin">
        <form method="post" asp-action="SignIn" asp-controller="User">

            <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

            <div class="form-floating">
                <label for="Username">Username</label>
                <input class="form-control" asp-for="@Model.Username" placeholder="Username">
            </div>
            <div class="form-floating">
                <label for="Password">Password</label>
                <input class="form-control" asp-for="@Model.Password" placeholder="Password">
            </div>

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" asp-for="@Model.RememberMe"> Remember me
                </label>
            </div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>

        </form>
        <form asp-action="LogIn" asp-controller="User" method="get">
            <button class="w-100 btn btn-lg btn-danger mt-3" type="submit">Log in</button>
        </form>

        <p class="mt-5 mb-3 text-muted">&copy; 2017–2021</p>
    </main>

</body>
</html>
